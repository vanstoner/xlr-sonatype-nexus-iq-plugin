<synthetic xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd" xmlns="http://www.xebialabs.com/deployit/synthetic" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">


    <type type="nexusiq.CliConfig" extends="xlrelease.Configuration">
        <property name="cliJar"               category="input" description="Path to the local CLI jar" />
        <property name="nexusiqUrl"           category="input" description="Url and PORT of the Nexus IQ Server (e.g. http://localhost:8070)"/>
        <property name="nexusiqUserName"      category="input" description="Username for the IQ Server"/>
        <property name="nexusiqPassword"      category="input" description="Password for the IQ Server"  password="true" />
        <property name="nexusiqProxyUrl"      category="input" required="false" default="DEFAULT"/>
        <property name="nexusiqProxyUserName" category="input" required="false" default="DEFAULT" description="Username for the Proxy Server"/>
        <property name="nexusiqProxyPassword" category="input" required="false" default="DEFAULT" description="Password for the Proxy Server"  password="true" />
    </type>

    <type type="nexusiq.cliTask" extends="xlrelease.PythonScript" virtual="true" >
        <property name="iconLocation" default="nexusiq/nexusiq-icon.png" hidden="true" />
        <property name="taskColor" hidden="true" default="#68B749" />
        <property name="cli" kind="ci" referenced-type="nexusiq.CliConfig" required="true" category="input" />

        <property name="output" required="false" category="output" description="Console output of the process."/>
        <property name="err"    required="false" category="output" description="Error stream of the process."/>
    </type>

    <type type="nexusiq.evaluateBinary" extends="nexusiq.cliTask">
        <property name="binaryUrl"        category="input" description="Location of the binary to be evaluated" />
        <property name="nexusiqApp"          category="input" description="Name of Application in Nexus IQ" />
        <property name="nexusiqStage"            category="input" description="Stage of release" kind="enum">
          <enum-values>
            <value>develop</value>
            <value>build</value>
            <value>stage-release</value>
            <value>release</value>
            <value>operate</value>
          </enum-values>
        </property>
    </type>
</synthetic>
